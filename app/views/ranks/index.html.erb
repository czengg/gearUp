<h1>Listing ranks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Player Name</th>
      <th>Sport</th>
      <th>Position</th>
    </tr>
  </thead>

  <tbody>
    <% @ranks.each do |rank| %>
      <tr>
        <td><%= link_to rank.player.name, rank.player %></td>
        <td><%= rank.sport.name %></td>
        <td><%= rank.position %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rank', new_rank_path %>
